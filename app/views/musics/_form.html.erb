
<%= simple_form_for [@user,@music], html: { multipart: true } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :names, required: true, autofocus: true %>
    <%= f.input :desc, required: true, autofocus: true %>
    <%=f.file_field :video, required: true, autofocus: true%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
